<%= render 'pages/home' unless user_signed_in? %>

<div id="posts" class="transitions-enabled">
  <%= link_to "Create a new job to track!", new_post_path, class: "btn btn-primary" %>
  <div class="box panel panel-default">
    <div class="panel-body">
      <table class="table">
        <thead>
          <th>Title</th>
          <th>Employer</th>
          <th>Location</th>
          <th>Status</th>
          <th>Edit</th>
          <th>Delete<th>
        <thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= link_to post.title, show_posts_path(post) %> </td>
              <td><%= post.employer %> </td>
              <td><%= post.location %> </td>
              <td><%= post.status %> </td>
              <td><%= link_to edit_post_path(post) do %>
                <span class="glyphicon glyphicon-edit"></span>
                Edit
               <% end %>
             </td>
             <td><%= link_to post, method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <span class="glyphicon glyphicon-trash"></span>
                  Delete
                <% end %>
             </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

